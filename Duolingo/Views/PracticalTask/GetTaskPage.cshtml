@model PracticalTask


<a asp-action="GetSubjectContent" asp-controller="Course"
   asp-route-subject="@Model.Subject.Subject"
   asp-route-id="@Model.Subject.CourseId"
   class="inline-block mt-2 text-white bg-amber-500 hover:bg-amber-700 px-4 py-2 rounded-lg transition">
    Powróć do listy zadań
</a>


<div class="max-w-2xl mx-auto p-6 bg-white shadow-lg rounded-lg">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">@Model.TaskToDo</h1>

    <form asp-action="CheckTask" asp-controller="PracticalTask" method="post" class="space-y-4">
        <div>
            <label for="answer" class="block text-gray-700 font-semibold">Twoja odpowiedź:</label>
            <textarea name="answer" id="answer" rows="4" class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
        </div>
        <input type="hidden" name="taskId" value="@Model.Id" />

        <button type="submit" class="w-full bg-amber-500 text-white py-2 rounded-lg hover:bg-amber-700 transition">
            Potwierdź
        </button>
    </form>

    @if (TempData["response"] != null && !string.IsNullOrEmpty(TempData["response"].ToString()))
    {
        <h2 class="mt-4 text-lg font-semibold text-green-600">@TempData["response"]</h2>
    }

</div>